<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.riddhikakadia.brunchy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/chef64"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CategoriesActivity"
            android:label="@string/title_activity_categories"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.riddhikakadia.brunchy.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.RecipesListActivity"
            android:label="@string/title_activity_recipes_list"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.riddhikakadia.brunchy.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.AboutUsActivity"
            android:label="@string/title_activity_about_us"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.riddhikakadia.brunchy.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.SettingsActivity">
        </activity>
    </application>

</manifest>