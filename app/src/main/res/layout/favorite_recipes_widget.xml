<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent_40"
    android:orientation="vertical">

    <TextView
        android:id="@+id/favorite_recipes_header_widget"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/favorite_recipes_header"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:textStyle="bold"
        android:theme="@style/ShadowTextAppearance" />

    <ListView
        android:id="@+id/favorite_recipes_list_widget"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@android:color/transparent"
        tools:listitem="@layout/favorite_recipes_widget_list_item" />

    <TextView
        android:id="@+id/no_data_textview_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:text="@string/no_favorite_recipes_message"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:theme="@style/ShadowTextAppearance"
         />

</LinearLayout>